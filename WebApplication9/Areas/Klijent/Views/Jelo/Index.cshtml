@model WebApplication9.Areas.Klijent.ViewModels.JeloIndexVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Jela
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Opis</th>
                        

                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.rows)
                    {
                        <tr>
                            <td>@x.Naziv</td>
                            <td>@x.Opis</td>
              
                        </tr>
                    }
                </tbody>
            </table>
           
            <a href="/Klijent/Jelo/Cjenovnik" class=" btn btn-primary" style="background-color: #e7e7e7; color: black;"><i class="fa fa-angle-double-right"></i>Cjenovnik</a>
        </div>
    </div>


</div>


