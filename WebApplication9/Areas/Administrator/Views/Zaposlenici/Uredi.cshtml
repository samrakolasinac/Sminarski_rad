@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication9.Areas.Administrator.ViewModels.ZaposleniciUrediVM

@{
    ViewData["Title"] = "Uredi";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<div>
    <form asp-action="SnimiEdit" method="post" enctype="multipart/form-data">
        <div class="row">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }
            <div class="form-group">
                <input type="hidden" asp-for="Zaposlenik.id" class="form-control" />
                <input type="hidden" asp-for="Zaposlenik.NalogID" />
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <label asp-for="Zaposlenik.Ime">Ime</label>
                    <input asp-for="Zaposlenik.Ime" class="form-control" autofocus />
                   
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.Prezime">Prezime</label>
                    <input asp-for="Zaposlenik.Prezime" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.JMBG">JMBG</label>
                    <input asp-for="Zaposlenik.JMBG" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.BrojTelefona">Broj telefona</label>
                    <input asp-for="Zaposlenik.BrojTelefona" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.TekuciRacun">Tekuci racun</label>
                    <input asp-for="Zaposlenik.TekuciRacun" class="form-control" autofocus />
                </div>


                <div class="form-group">
                    <label asp-for="Zaposlenik.DatumRodjenja">Datum rodjenja</label>
                    <input asp-for="Zaposlenik.DatumRodjenja" class="form-control" autofocus />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Zaposlenik.DatumZaposelenja">Datum zaposlenja</label>
                    <input asp-for="Zaposlenik.DatumZaposelenja" class="form-control" autofocus />
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.Email">Email</label>
                    <input asp-for="Zaposlenik.Email" class="form-control" autofocus />
                </div>

                <div class="form-group">
                    <label asp-for="Zaposlenik.Nalog.KorisnickoIme" class="control-label"></label>
                    <input type="text" asp-for="Zaposlenik.Nalog.KorisnickoIme" class="form-control">
                    <span asp-validation-for="Zaposlenik.Nalog.KorisnickoIme" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Zaposlenik.Nalog.Lozinka" class="control-label"></label>
                    <input type="text" asp-for="Zaposlenik.Nalog.Lozinka" class="form-control">
                    <span asp-validation-for="Zaposlenik.Nalog.Lozinka" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.GradID">Grad</label>
                    <select asp-for="Zaposlenik.GradID" asp-items="@Model.gradovi" class="form-control"></select>
                    <a class="MojDIV" asp-action="Index" asp-area="Administrator" asp-controller="Lokacije">...</a>
                </div>
                <div class="form-group">
                    <label asp-for="Zaposlenik.TipUposlenikaID">Tip uposlenika</label>
                    <select asp-for="Zaposlenik.TipUposlenikaID" asp-items="@Model.tipZaposlenika" class="form-control"></select>
                </div>

                <div class="pull-right">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Sacuvaj</button>
                    <a asp-action="Index" class="btn btn-primary" style="background-color:lightgray;color:black"><i class="fa fa-times"></i> Odustani</a>
                </div>
            </div>
        </div>
    </form>



